<div class="page-header">
  <h1>Sign in</h1>
</div>

<div class="row">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "well span4 offset4" }) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email, :class => "span3", :placeholder => "Type your email here" %>

    <%= f.label :password %>
    <%= f.password_field :password, :class => "span3", :placeholder => "Type your secret password" %>

    <% if devise_mapping.rememberable? -%>
      <%= f.label :remember_me, :class => "checkbox" do %>
        <%= f.check_box :remember_me %> Remember me
      <% end %>
    <% end -%>

    <%= f.submit "Sign in", :class => "btn btn-primary" %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "pull-right" %>
  <% end %>
</div>