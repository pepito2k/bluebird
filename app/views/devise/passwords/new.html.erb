<div class="page-header">
  <h1>Forgot your password?</h1>
</div>

<% unless devise_error_messages!.blank? %>
  <div class="alert alert-error fade in">
    <button class="close" data-dismiss="alert">Ã—</button>
    <%= devise_error_messages! %>
  </div>
<% end %>

<div class="row">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "well span4 offset4" }) do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.submit "Send me reset password instructions", :class => "btn btn-primary" %>

    <%= link_to "Sign in", new_session_path(resource_name), :class => "pull-right" %>
  <% end %>
</div>