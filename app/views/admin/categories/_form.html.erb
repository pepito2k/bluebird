<%= render partial: "/admin/shared/flash_messages" %>

<%= form_for ["admin", @category], html: { class: "form-horizontal" } do |f| %>
  <%= field_set_tag do %>
    <div class="control-group">
      <%= f.label :name, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :name, class: "span3" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :active, class: "control-label" %>
      <div class="controls">
        <label class="checkbox">
          <%= f.check_box :active %>
          Uncheck to hide this category
        </label>
      </div>
    </div>

    <div class="form-actions">
      <% if @category.new_record? %>
      <%= f.submit "Create Category", class: "btn btn-primary" %>
      <% else %>
      <%= f.submit "Update Category", class: "btn btn-primary" %>
      <% end %>
      <%= link_to "Cancel", admin_categories_path, class: "btn"   %>
    </div>
  <% end %>
<% end %>