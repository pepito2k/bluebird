<div class="page-header">
  <h1>Categories</h1>
</div>

<%= render partial: "/admin/shared/flash_messages" %>

<%= link_to new_admin_category_path, class: "btn btn-success" do %>
  <i class="icon-plus-sign icon-white"></i>
  New Category
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="span1">Id</th>
      <th>Name</th>
      <th>Active</th>
      <th class="span2">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @categories.each do |c| %>
    <tr>
      <td><%= c.id %></td>
      <td><%= c.name %></td>
      <td><%= yes_no_label(c.active) %></td>
      <td>
        <%= link_to edit_admin_category_path(c.id), class: "btn btn-mini" do %>
          <i class="icon-pencil"></i>
          Edit
        <% end %>
        <%= link_to admin_category_path(c.id), class: "btn btn-danger btn-mini", confirm: "Are you sure you want to delete this category?", method: :delete do %>
          <i class="icon-trash icon-white"></i>
          Delete
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="4"><%= pluralize @categories.count, "Category" %> found</td>
    </tr>
  </tfoot>
</table>

<%= will_paginate %>