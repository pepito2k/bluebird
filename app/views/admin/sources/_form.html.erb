<%= render partial: "/admin/shared/errors" %>

<%= form_for ["admin", @source], html: { class: "form-horizontal" } do |f| %>
    <%= field_set_tag do %>
        <div class="control-group">
          <%= f.label :name, class: "control-label" %>
          <div class="controls">
            <%= f.text_field :name, class: "span3" %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :active, class: "control-label" %>
          <div class="controls">
            <label class="checkbox">
              <%= f.check_box :active %>
              Uncheck to hide this source
            </label>
          </div>
        </div>

        <div class="form-actions">
          <% if @source.new_record? %>
              <%= f.submit "Create Source", class: "btn btn-primary" %>
          <% else %>
              <%= f.submit "Update Source", class: "btn btn-primary" %>
          <% end %>

          <%= submit_tag 'Cancel', :type => "button", :name => 'cancel', class: "btn btn-primary" %>
        </div>
    <% end %>
<% end %>
