<div class="page-header">
  <h1>Users</h1>
</div>

<%= render partial: "/admin/shared/flash_messages" %>

<%= link_to new_admin_user_path, class: "btn btn-success" do %>
    <i class="icon-plus-sign icon-white"></i>
    New User
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="span1">Id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Active</th>
      <th class="span2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |u| %>
        <tr>
          <td><%= u.id %></td>
          <td><%= u.first_name %></td>
          <td><%= u.last_name %></td>
          <td><%= u.email %></td>
          <td><%= yes_no_label(u.active) %></td>
          <td>
            <%= link_to edit_admin_user_path(u.id), class: "btn btn-mini" do %>
                <i class="icon-pencil"></i>
                Edit
            <% end %>
            <%= link_to admin_user_path(u.id), class: "btn btn-danger btn-mini", confirm: "Are you sure you want to delete this user?", method: :delete do %>
                <i class="icon-trash icon-white"></i>
                Delete
            <% end %>
          </td>
        </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="6"><%= pluralize @users.count, "User" %></td>
    </tr>
  </tfoot>
</table>

<%= will_paginate %>